<h1>Teams</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-xs-6">Name</th>
      <th class="col-xs-3">Client</th>
      <th class="col-xs-3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.client_id %></td>
        <td>
          <%= link_to 'Show', team, class: 'btn btn-success btn-xs' %>
          <%= link_to 'Edit', edit_team_path(team) , class: 'btn btn-primary btn-xs'%>
          <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
  <%= link_to 'New Team', new_team_path , class: 'btn btn-primary'%>
<% end %>
