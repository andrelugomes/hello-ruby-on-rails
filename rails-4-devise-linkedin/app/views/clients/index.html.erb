<h1>Clients</h1>

<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-xs-9">Name</th>
      <th class="col-xs-3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td>
          <%= link_to 'Show', client, class: 'btn btn-success btn-xs' %>
          <%= link_to 'Edit', edit_client_path(client),class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' },
            class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
  <%= link_to 'New Client', new_client_path , class: 'btn btn-primary'%>
<% end %>
