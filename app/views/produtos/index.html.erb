<html>
<body>

<!--
nav_bar é da gem twitter-bootstrap-rails
root_url é definido com  rake routes
-->
<%= nav_bar brand: "Store", brand_link: root_url  %>
<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Preço</th>
    <th>Quantidade</th>
  </tr>
  </thead>
  <tbody>
  <!--@ para acesar variaveis de intancia-->
  <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco %></td>
        <td><%= produto.quantidade %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</body>
</html>